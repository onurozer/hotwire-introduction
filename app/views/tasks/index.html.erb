<%= turbo_stream_from "tasks_activity" %>
<!-- Tasks Header -->
<div class="flex gap-x-2">
  <h1 class="mb-5 text-4xl font-bold tracking-tight">Tasks</h1>
  <div id ="tasks_count" class="flex items-center justify-center w-6 h-6 p-3 text-white bg-red-500 rounded-full">
    <%= render "tasks/count" %>
  </div>
</div>
<!-- Task List -->
<div id="tasks" class="mb-5">
  <%= render collection: @tasks, partial: "tasks/task" %>
</div>
<!-- Add Task Form -->
<div>
  <%= form_with model: @task do |form| %>
    <%= form.text_field :title, class: "form-input", autofocus: true, required: true %>
    <%= form.submit "Add", class: "bg-gray-900 text-white form-input" %>
  <% end %>
</div>
